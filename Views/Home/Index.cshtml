@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron">
    <h1 class="display-4">Welcome To Our Flight Booking System!</h1>
    <p class="lead">Not Finished Yet Beta Version</p>
    <hr class="my-4">
    <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" role="button" asp-action="Login" asp-controller="Account">Learn more</a>
    </p>
    <br />
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">From:</label>
            <input type="text" class="form-control" id="Destination" aria-describedby="dest" placeholder="Where are you going from ?">  
        </div>
        <br />
        <div class="form-group">
            <label for="exampleInputPassword1">To:</label>
            <input type="text" class="form-control" id="dest" placeholder="Where are you going to ?">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>