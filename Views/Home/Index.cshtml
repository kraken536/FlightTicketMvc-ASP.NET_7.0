@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron">
    <h1 class="display-4">Welcome To Our Flight Booking System!</h1>
    <p class="lead">Not Finished Yet Beta Version</p>
    <hr class="my-4">
    <p>This system can be used to book flights according to precise criterias.</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" role="button" asp-action="Login" asp-controller="Account">Learn more</a>
    </p>
    <br />
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">From:</label>
            <input type="text" class="form-control" id="Destination" aria-describedby="dest" placeholder="Where are you coming from?">  
        </div>
        <br />
        <div class="form-group">
            <label for="exampleInputPassword1">To:</label>
            <input type="text" class="form-control" id="dest" placeholder="Where are you going to?">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <br />

    <div class="bd-example">
        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th scope="col">Flight ID</th>
                    <th scope="col">Source Airport</th>
                    <th scope="col">Destination Airport</th>
                    <th scope="col">Departure Date</th>
                    <th scope="col">Arrival Date</th>
                    <th scope="col">Seats Details</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>21.05.2021</td>
                    <td>14.06.2021</td>
                    <td><a asp-action="SeatDetails" asp-controller="Flight">Details</a></td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>01.04.2022</td>
                    <td>15.04.2022</td>
                    <td><a asp-action="SeatDetails" asp-controller="Flight">Details</a></td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td >Larry the Bird</td>
                    <td>twitter</td>
                    <td>27.09.2023</td>
                    <td>12.10.2023</td>
                    <td><a asp-action="SeatDetails" asp-controller="Flight">Details</a></td>
                </tr>
            </tbody>

        </table>
    </div>
</div>